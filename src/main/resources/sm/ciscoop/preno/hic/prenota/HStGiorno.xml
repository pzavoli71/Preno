<query><![CDATA[

select * from Giorno
			INNER JOIN SoggAR ON 1=1  AND SoggAR.IdGiorno = Giorno.IdGiorno
			INNER JOIN TipoTrasporto ON 1=1  AND TipoTrasporto.IdTpTrasporto = Giorno.IdTpTrasporto
			 WHERE 1 = 1 
				 AND Giorno.IdGiorno = $IdGiorno
			-- ORDER BY Cognome, Nome

]]>
</query>
